<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/islami_background"
    tools:context=".fragments.TasbeehFragment">

    <Toolbar
        android:id="@+id/sebhaa_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="اسلامي"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </Toolbar>

    <ImageView
        android:id="@+id/sebhaa_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/sebhaa_head"
        app:layout_constraintBottom_toTopOf="@id/sebhaa_body"
        app:layout_constraintEnd_toEndOf="@id/sebhaa_body"
        app:layout_constraintStart_toStartOf="@id/sebhaa_body"
        app:layout_constraintTop_toBottomOf="@id/sebhaa_tool_bar" />

    <ImageView
        android:id="@+id/sebhaa_body"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/sebhaa_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebhaa_head" />

    <TextView
        android:id="@+id/tasbehat_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="عدد التسبيحات"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebhaa_body" />

    <TextView
        android:id="@+id/tasbeh_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/counter_bg"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasbehat_number_tv" />

    <TextView
        android:id="@+id/tasbeh_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/tasbeh_word_bg"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:text="سبحان الله"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasbeh_counter" />


</androidx.constraintlayout.widget.ConstraintLayout>